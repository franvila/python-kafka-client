{
  "baseBranches": ["main"],
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "ignorePaths": [".github/renovate.json"],
  "automergeStrategy": "merge-commit",
  "ignoreTests": true,
  "extends": [
    "config:recommended",
    ":gitSignOff"
  ],
  "enabledManagers": [
    "custom.regex",
    "dockerfile"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "ARG LIBRDKAFKA_VERSION=(?<currentValue>\\d+\\.\\d+.\\d+)"
      ],
      "depNameTemplate": "confluentinc/confluent-kafka-python",
      "extractVersionTemplate": "^v(?<version>.*)?$",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "datasourceTemplate": "github-releases"
    }
  ]
}
